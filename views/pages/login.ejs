<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
  <style media="screen">
    #MedMinderLogo {
      width:100%;
      margin-left: -20px;
    }
    .alert-fixed {
      position:fixed;
      top: 50px;
      left: 0px;
      width: 100%;
      z-index:9999;
      border-radius:0px;
      text-align: center;
    }
  </style>
</head>

<body>

<% include ../partials/nav.ejs %>

<div class="container">

  <div class="row">
    <div class="col-xs-12">
      <img id="MedMinderLogo" src="images/med-minder-logo.png" alt="Med Minder Logo">
    </div>
  </div>

  <form action="/login" method="post">
    <div class="form-group">
      <label for="username">Username</label>
      <input type="text" class="form-control" placeholder="Enter your username" name="username" id="username">
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" class="form-control" placeholder="Enter your password" name="password" id="password">
    </div>

    <div class="row">
      <div class="col-xs-12">
        <button style="width:100%;" type="submit" class="btn btn-default">Login</button>
      </div>
    </div>
    <div class="row text-center">
      <div class="col-xs-12">
        <p>Don't have an account? <a href="/signup">Sign up</a></p>
      </div>
    </div>
    <!-- <a id="signup_button" title="Click here to sign up!" class="btn btn-default">Sign up</button> -->
  </form>
</div>

<% if (locals.message) { %>
<div class="alert alert-fixed alert-danger" role="alert">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
  <strong> <%=message%> </strong>
</div>
<% } %>

</body>

<script>
  $(document).ready(function() {

    if (Cookies.get("font-size")) {
      switch(Cookies.get("font-size")) {
          case "0":
              $('.btn,h1,h2,h3,h4,p,label').css('font-size', '');
              break;
          case "1":
              $('.btn,h1,h2,h3,h4,p,label').css('font-size', '1.5em');
              break;
          case "2":
              $('.btn,h1,h2,h3,h4,p,label').css('font-size', '2em');
              break;
          default:
              $('.btn,h1,h2,h3,h4,p,label').css('font-size', '');
      }
    }

    $('button').on('click', function(e){
      if ($(this)[0] == $('#signup_button')[0]) {
        e.preventDefault();
        location.href = "/signup";
      }
    });
  });
</script>
</html>
