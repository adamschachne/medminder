<body>

  <% include ../partials/nav.ejs %>

  <div class="container">

    <form>
      <div class="form-group row">
        <label class="col-xs-12" for="slider-text-size">Font Size</label>
        <div class="col-xs-12" id="slider-text-size"></div>
      </div>

      <div class="form-group row">
