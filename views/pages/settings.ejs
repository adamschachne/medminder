          <button style="width:33%;" class="btn btn-default btn-lg separate" type="button" name="helpButton">Help</button>
          <button onclick="location.href='/logout'" style="width:33%;" class="btn btn-default btn-lg separate" type="button" name="logoutButton">Logout</button>
        </div>
      </div>

    </form>

