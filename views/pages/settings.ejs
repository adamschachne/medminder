<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>

</head>

<body>

  <% include ../partials/nav.ejs %>

  <div class="container">

    <form>
      <div class="form-group row">
        <label class="col-xs-12" for="slider-text-size">Font Size</label>
        <div class="col-xs-12" id="slider-text-size" type="text" data-slider-min="0" data-slider-max="80" data-slider-step="1" data-slider-value="14"></div>
      </div>

      <div class="form-group row">
        <label class="col-xs-12" for="notifications-switch">Notifications</label>
        <input style="margin-left:15px;"class="col-xs-12" type="checkbox" name="notifications-switch" id="notifications-switch" checked data-style="ios">
      </div>

      <div class="form-group row">
        <label class="col-xs-12" for="LayoutBtnGroup">Layout</label>
        <div class="col-xs-12 btn-group" id="LayoutBtnGroup">
          <button style="width:50%;" class="btn btn-default btn-lg separate" type="button" name="listButton">List</button>
          <button style="width:50%;" class="btn btn-default btn-lg separate" type="button" name="gridButton">Grid</button>
        </div>
      </div>

      <div class="form-group">
        <button style="width:100%" type="submit" class="btn-lg btn-primary">Save</button>
      </div>


      <div class="form-group row">
        <div class="col-xs-12 btn-group" id="appSettingsBtns">
          <button style="width:33%;" class="btn btn-default btn-lg separate" type="button" name="historyButton">History</button>
          <button style="width:33%;" class="btn btn-default btn-lg separate" type="button" name="helpButton">Help</button>
          <button style="width:33%;" class="btn btn-default btn-lg separate" type="button" name="logoutButton">Logout</button>
        </div>
      </div>

    </form>

  </div>





  <script type="text/javascript">
     $("[name='notifications-switch']").bootstrapToggle();
     $("#slider-text-size").bootstrapSlider();

  </script>

</body>
</html>
