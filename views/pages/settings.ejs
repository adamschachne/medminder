<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
</head>

<body>

  <% include ../partials/nav.ejs %>

  <div class="container">
    <form>
      <div class="form-group row">
        <label class="col-xs-12" for="slider-text-size">Font Size</label>
        <div class="col-xs-12" id="slider-text-size" type="text" data-slider-min="14" data-slider-max="20" data-slider-step="1" data-slider-value="14"></div>
      </div>

      <div class="form-group row">
        <label class="col-xs-12" for="notifications-switch">Notifications</label>
        <input style="margin-left:15px;"class="col-xs-12" type="checkbox" name="notifications-switch" id="notifications-switch" checked data-style="ios">
      </div>

      <div class="form-group">
        <button id="saveSettings" style="width:100%" class="btn-lg btn-primary">Save</button>
      </div>

      <div class="form-group row">
        <div class="col-xs-12 btn-group" id="appSettingsBtns">
          <button style="width:33%;" class="btn btn-default btn-lg" type="button" name="historyButton">History</button>
          <button style="width:33%;" class="btn btn-default btn-lg" type="button" name="helpButton">Help</button>
          <button onclick="location.href='/logout'" style="width:33%;" class="btn btn-default btn-lg separate" type="button" name="logoutButton">Logout</button>
        </div>
      </div>
    </form>
  </div>





  <script type="text/javascript">
    $(document).ready(function(){
      if(Cookies.get("font-size")){
        $('*').css('font-size', Cookies.get("font-size") + 'px');
      }
    })



   $("[name='notifications-switch']").bootstrapToggle();
   $("#slider-text-size").bootstrapSlider();
   $('#slider-text-size').change(function () {
     var sliderVal = $('#slider-text-size').val();
     $('*').css('font-size', sliderVal + 'px');
     Cookies.set("font-size-placeholder", sliderVal)

   });

   $("#saveSettings").click(function() {
     Cookies.set("font-size",Cookies.get("font-size-placeholder"));

   })

  </script>

</body>
</html>
