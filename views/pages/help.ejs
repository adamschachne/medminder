    <script type="text/javascript">
      $(document).ready(function() {
        if (Cookies.get("font-size")) {
          switch(Cookies.get("font-size")) {
              case "0":
                  $('.btn,h1,h2,h3,h4,p,span').css('font-size', '');
                  break;
              case "1":
                  $('.btn,h1,h2,h3,h4,p,span').css('font-size', '1.5em');
                  break;
              case "2":
                  $('.btn,h1,h2,h3,h4,p,span').css('font-size', '2em');
                  break;
              default:
                  $('.btn,h1,h2,h3,h4,p,span').css('font-size', '');
          }
        }
      });
    </script>

